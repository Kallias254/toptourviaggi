<!-- destinations.njk -->
<section class="services-section black-bg pt-100 pb-100">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-7">
                <div class="section-title text-center text-white mb-50 wow fadeInDown">
                    <span class="sub-title">Destinations</span>
                    <h2>Discover Your Next Great Adventure</h2>
                </div>
            </div>
        </div>
        <div class="slider-active-4-item wow fadeInUp">
            {% for destination in collections.destinations %}
            <!-- Entire card as a link -->
            <a href="/destinations/{{ destination.data.slug }}" class="single-service-item-two-link">
                <div class="single-service-item-two">
                    <div class="hover-bg bg_cover" style="background-image: url('{{ destination.data.images[0].src }}');"></div>
                    <div class="content">
                        <div class="icon">
                            <i class="{{ destination.data.icon }}"></i>
                        </div>
                        <h3 class="title text-truncate">{{ destination.data.title }}</h3>
                        <p>{{ destination.data.description | truncate(100) }}</p>
                        <span class="btn-link">Read More <i class="far fa-long-arrow-right"></i></span>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
</section>



<!--====== Start Blog Section ======-->
<section class="blog-section pt-100 pb-60">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6">
                <!--=== Blog Content Box ===-->
                <div class="blog-content-box mb-40 wow fadeInLeft">
                    <!--=== Section Title ===-->
                    <div class="section-title mb-30">
                        <span class="sub-title">Latest Updates</span>
                        <h2>Discover New Horizons with Our Travel Stories</h2>
                    </div>
                    <p class="mb-20">Explore engaging travel narratives and expert insights tailored to enhance your next journey. Dive into a collection of stories that bring destinations to life, offering you a taste of local culture, adventure, and tips.</p>
                    <a href="/blog" class="btn-link">Explore More Articles <i class="far fa-long-arrow-right"></i></a>
                </div>
            </div>
            <div class="col-xl-6">
                <!--=== Blog Posts Loop ===-->
                {% set counter = 0 %}
                {% for post in collections.posts %}
                {% if counter < 2 %}
                <div class="single-blog-post-two mb-40 wow fadeInUp">
                    <div class="post-thumbnail">
                        <a href="{{ post.url }}"><img src="{{ post.data.image }}" alt="{{ post.data.title }}"></a>
                    </div>
                    <div class="entry-content">
                        <div class="post-meta">
                            <span><i class="far fa-calendar-alt"></i><a href="{{ post.url }}">{{ post.date | date("MMMM DD, YYYY") }}</a></span>
                            <h3 class="title"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
                            <a href="{{ post.url }}" class="main-btn filled-btn">Read More<i class="far fa-paper-plane"></i></a>
                        </div>
                    </div>
                </div>
                {% set counter = counter + 1 %}
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section><!--====== End Blog Section ======-->






    <!--====== Start Testimonial Section ======-->
    <section class="testimonial-section pt-60 pb-60" id="testimonials">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8">
                    <!--=== Section Title ===-->
                    <div class="section-title text-center mb-60 wow fadeInDown">
                        <span class="sub-title">Testimonials</span>
                        <h2>Hear from Our Happy Adventurers</h2>
                    </div>
                </div>
            </div>
            <div class="row align-items-xl-center">
                <div class="col-xl-7 col-lg-12 order-1 order-xl-2">
                    <!--=== Testimonial Slider ===-->
                    <div class="testimonial-slider-one pl-lg-55 mb-40 wow fadeInRight">
                        {% for testimonial in testimonials.testimonials %}

                        <!--=== Testimonial Item ===-->
                        <div class="gw-testimonial-item">
                            <div class="testimonial-inner-content">
                                <div class="quote-rating-box">
                                    <div class="icon">
                                        <img src="/assets/images/testimonial/quote.png" alt="quote icon">
                                    </div>
                                    <div class="ratings-box">
                                        <h4>{{ testimonial.service }}</h4>
                                        <ul class="ratings">
                                            {% for i in range(0, testimonial.rating) %}
                                            <li><i class="fas fa-star"></i></li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                                <p>{{ testimonial.text }}</p>
                                <div class="author-thumb-title">
                                    <div class="author-thumb">
                                        <img src="{{ testimonial.author.image }}" alt="Image of {{ testimonial.author.name }}">
                                    </div>
                                    <div class="author-title">
                                        <h3 class="title">{{ testimonial.author.name }}</h3>
                                        <p class="position">{{ testimonial.author.position }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-xl-5 col-lg-12 order-2 order-xl-1">
                    <!--=== Testimonial Image ===-->
                    <div class="testimonial-one_image-box mb-40 wow fadeInLeft">
                            <img src="{{ aboutUsPage.testimonialImage[0].src }}" alt="{{ aboutUsPage.testimonialImage[0].alt }}">
                    </div>
                </div>
            </div>
        </div>
    </section><!--====== End Testimonial Section ======-->



    <!--====== Start Popular Tours Section ======-->
<section class="places-section pt-95 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center mb-45 wow fadeInDown">
                    <span class="sub-title">Tours</span>
                    <h2>Top Tour Picks For You</h2>
                </div>
            </div>
        </div>
        <div class="slider-active-3-item-dot wow fadeInUp">
            {% for tour in collections.featuredTours %}
            <div class="single-place-item mb-60 wow fadeInUp">
                <div class="place-img">
                    <a href="{{ tour.url }}"><img src="{{ tour.data.cardImageSrc }}" alt="{{ tour.data.cardImageAlt }}"></a>
                </div>
                <div class="place-content">
                    <div class="info">
                        <ul class="ratings">
                            <li><i class="fas fa-star"></i></li>
                            <li><i class="fas fa-star"></i></li>
                            <li><i class="fas fa-star"></i></li>
                            <li><i class="fas fa-star"></i></li>
                            <li><i class="fas fa-star"></i></li>
                            <li><a href="#">(4.9)</a></li>
                        </ul>
                        <h4 class="title ellipsis"><a href="{{ tour.url }}">{{ tour.data.title }}</a></h4>
                        <p class="location pb-10"><i class="fas fa-map-marker-alt"></i>{{ tour.data.location | titleCase }}</p>
                        <p class="price"><i class="fas fa-usd-circle"></i>Resident: <span class="currency"></span>KES {{ tour.data.residentYouthPrice }}</p>
                        <p class="price"><i class="fas fa-usd-circle"></i>Non-Resident: <span class="currency"></span>USD {{ tour.data.youthPrice }}</p>
                        <div class="meta">
                            <span><i class="far fa-clock"></i>{{ tour.data.duration }} Days</span>
                            <span><i class="far fa-user"></i>{{ tour.data.maxGuests }} Guests</span>
                            <span><a href="{{ tour.url }}">Details<i class="far fa-long-arrow-right"></i></a></span>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section><!--====== End Popular Tours Section ======-->

