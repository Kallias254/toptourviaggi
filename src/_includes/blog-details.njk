---
title: "Blog Details"
layout: "base.njk"
---

{% block header %}
    {% include "header-general.njk" %}
{% endblock %}


{% block content %}
<!--====== Start Breadcrumb Section ======-->
<section class="page-banner overlay pt-170 pb-170 bg_cover"  style="background-image: url('{{ pageBanner }}');">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="page-banner-content text-center text-white">
                    <h1 class="page-title">Blog Details</h1>
                    <ul class="breadcrumb-link text-white">
                        <li><a href="/blog">Blog</a></li>
                        <li class="active">Blog Details</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--====== End Breadcrumb Section ======-->

<section class="blog-details-section pt-100 pb-70">
    <div class="container">
        <div class="row">
            <div class="col-xl-8">
                <!-- Blog Details Wrapper -->
                <div class="blog-details-wrapper pr-lg-50">
                    <div class="blog-post mb-60 wow fadeInUp">
                        <div class="post-thumbnail">
                            <img src="{{ blogImage }}" alt="{{ title }}">
                        </div>
                        <div class="post-meta text-center pt-25 pb-15 mb-25">
                            <span><i class="far fa-user"></i> <a href="#">{{ author.name }}</a></span>
                            <span><i class="far fa-calendar-alt"></i> {{ date | date("F d, Y") }}</span>
                            <span><i class="fas fa-tags"></i> {{ category }}</span>
                        </div>
                        <div class="main-post">
                            <h3 class="title">{{ title }}</h3>
                            <p>{{ content | safe }}</p>
                        </div>
                    </div>
                
                    <!-- Tags and Social Share -->
                    <div class="entry-footer wow fadeInUp">
                        <div class="tag-links">
                            <h6>Popular Tags :</h6>
                            {% for tag in tags %}
                            <a href="#">{{ tag }}</a>
                            {% endfor %}
                        </div>
                        <div class="social-share">
                            <h6>Share :</h6>
                            <a href="{{ socialLinks.facebook }}"><i class="fab fa-facebook-f"></i></a>
                            <a href="{{ socialLinks.twitter }}"><i class="fab fa-twitter"></i></a>
                            <a href="{{ socialLinks.instagram }}"><i class="fab fa-instagram"></i></a>
                            <a href="{{ socialLinks.linkedin }}"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                
                    <!-- Post Author Box -->
                    <div class="post-author-box d-flex pb-60 mb-60 wow fadeInUp">
                        <div class="author-thumb">
                            <img src="{{ author.image }}" alt="{{ author.name }}">
                        </div>
                        <div class="author-content">
                            <h5>{{ author.name }}</h5>
                            <span class="position">{{ author.position }}</span>
                            <p>{{ author.bio }}</p>
                        </div>
                    </div>
                </div>
                
            </div>

            <!-- Sidebar Widget Area -->
            <div class="col-xl-4">
                <!-- Additional widgets could be added here -->
                                <div class="sidebar-widget-area">
                    <!-- Search Widget -->
