    <script>
        if (window.netlifyIdentity) {
          window.netlifyIdentity.on('init', user => {
            if (!user) {
              // User is not logged in, redirecting to the login page
              window.location.href = '/login'; // Change this to your login page URL
            }
          });
      
          window.netlifyIdentity.on('login', () => {
            // User just logged in, redirecting to the admin page
            window.location.href = '/admin'; // Redirects to the admin page after login
          });
      
          window.netlifyIdentity.on('logout', () => {
            // User just logged out, redirecting to the homepage or login page
            window.location.href = '/login'; // Redirects to the login page after logout
          });
        }
